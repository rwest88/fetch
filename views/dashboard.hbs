<link rel="stylesheet" href="../assets/css/dashboard.css">
<div class="hero-body" id="dashboard">
  <div class="container">

    <h1>Your fetch!</h1>
    <h3>Keep up with your latest fetches here</h3>
    <hr>


    <br>
    <br>
    <div class="columns is-centered is-multiline">
      <div class="column is-centered">
        <p class="buttons">
          <a id="addPetBtn" class="button is-large hvr-box-shadow-outset">
            <span class="icon is-large">
              <i class="fas fa-plus"></i>
            </span>
            <span>Add a Pet</span>
          </a>
        </p>
      </div>
      <div class="column">
        <p class="buttons">
          <a class="button is-large hvr-box-shadow-outset" href="pets">
            <span class="icon is-large">
              <i class="fas fa-paw"></i>
            </span>
            <span>Find a Pet</span>
          </a>
        </p>
      </div>
      <div class="column">
        <p class="buttons">
          <a class="button is-large hvr-box-shadow-outset" href="people">
            <span class="icon is-large">
              <i class="fas fa-user-plus"></i>
            </span>
            <span>Find a Human</span>
          </a>
        </p>
      </div>
    </div>
    <br>
    <div id="calendar"></div>
  </div>
</div>


<div id="addPetModal" class="modal">
  <div class="modal-background"></div>
  <div class="modal-card">
    <header class="modal-card-head">
      <p class="modal-card-title">Add Your Pet</p>
      <button class="delete" aria-label="close"></button>
    </header>
    <section class="modal-card-body">
      <form id="signup1" name="signin" method="post" action="signup">
        <div class="field">
          <label class="label">Name</label>
          <div class="control">
            <input id="namefield" class="input" name="name" type="input" placeholder="e.g. Alex Smith" autofocus="">
          </div>
        </div>
        <div class="field">
          <label class="label">Animal Type</label>
          <div class="control">
            <input id="typefield" class="input" name="type" type="text" placeholder="e.g. Dog, Cat" autofocus="">
          </div>
        </div>
        <div class="field">
          <label class="label">Breed (optional)</label>
          <div class="control">
            <input id="breedfield" class="input" name="breed" type="text" placeholder="e.g. Pug, Himalayan">
          </div>
        </div>
        <div class="field">
          <label class="label">About</label>
          <div class="control">
            <textarea id="aboutfield" class="textarea" type="text" name="about" placeholder="Tell us a little about your pet"></textarea>
          </div>
        </div>
      </form>
    </section>
    <footer class="modal-card-foot">
      <button id="save" class="button is-primary">Submit</button>
      <button id="cancel" class="button" id="close">Cancel</button>
    </footer>
  </div>
</div>
