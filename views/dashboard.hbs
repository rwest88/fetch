<link rel="stylesheet" href="../assets/css/dashboard.css">
<div class="hero-body" id="dashboard">
  <div class="container">

    <h1>Your fetch!</h1>
    <h3>Keep up with your latest fetches here</h3>
    <hr>

    <br>
    <br>
    <div class="columns is-centered is-multiline">
      <div class="column is-centered">
        <p class="buttons">
          <a id="addPetBtn" class="button is-large">
            <span class="icon is-large">
              <i class="fas fa-plus"></i>
            </span>
            <span>Add a Pet</span>
          </a>
        </p>
      </div>
      <div class="column">
        <p class="buttons">
          <a class="button is-large" href="pets">
            <span class="icon is-large">
              <i class="fas fa-paw"></i>
            </span>
            <span>Find a Pet</span>
          </a>
        </p>
      </div>
      <div class="column">
        <p class="buttons">
          <a class="button is-large" href="people">
            <span class="icon is-large">
              <i class="fas fa-user-plus"></i>
            </span>
            <span>Find a Human</span>
          </a>
        </p>
      </div>
    </div>
    <br>
    <div id="calendar"></div>
  </div>
</div>
<div id="addPetModal" class="modal">
  <div class="modal-background"></div>
  <div class="modal-card">
    <header class="modal-card-head">
      <p class="modal-card-title">Modal title</p>
    </header>
    <section class="modal-card-body">
      
      <form id="signup1" name="signin" method="post" action="signup">
        <div class="field">
          <div class="control">
            <input class="input" name="firstname" type="input" placeholder="Name" autofocus="">
          </div>
        </div>
        <div class="field">
          <div class="control">
            <input class="input" name="type" type="text" placeholder="Type of Animal" autofocus="">
          </div>
        </div>
        <div class="field">
          <div class="control">
            <input class="input" name="breed" type="text" placeholder="Breed (if known)">
          </div>
        </div>
        <div class="field">
          <div class="control">
            <textarea class="textarea" type="text" name="about" placeholder="Description"></textarea>
          </div>
        </div>
      </form>
    </section>
    <footer class="modal-card-foot">
      <button id="save" class="button is-success">Save changes</button>
      <button id="cancel" class="button">Cancel</button>
    </footer>
  </div>
</div>
