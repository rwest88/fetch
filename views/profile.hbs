<div class="hero-body">
    {{#if human}}
    <div id="human-profile">
       <button type="button" id="createEngagementButton">Create an Engagement</button>
    </div>
    {{else}}
    <div id="pet-profile">
        <h1>This is animal the profile view</h1>
        <h2>All animal specific content goes here...</h2>
    </div>
    {{/if}}
    <div id="calendar"></div>
</div>

<div class="modal" id="people-modal">
    <div class="modal-background"></div>
    <div class="modal-card">
        <header class="modal-card-head">
            <p class="modal-card-title">Tell Us About Yourself</p>
            <button class="delete" aria-label="close"></button>
        </header>
        <section class="modal-card-body">
            <div class="field is-horizontal">
                <div class="field-label is-normal">
                    <label class="label">Name</label>
                </div>
                <div class="field-body">
                    <div class="field">
                        <p class="control is-expanded has-icons-left">
                            <input class="input" type="text" placeholder="First Name">
                            <span class="icon is-small is-left">
                                <i class="fas fa-user"></i>
                            </span>
                        </p>
                    </div>
                    <div class="field">
                        <p class="control is-expanded has-icons-left has-icons-right">
                            <input class="input " type="text" placeholder="Last Name">
                            <span class="icon is-small is-left">
                                <i class="fas fa-envelope"></i>
                            </span>
                            <span class="icon is-small is-right">
                                <i class="fas fa-check"></i>
                            </span>
                        </p>
                    </div>
                </div>
            </div>



            <div class="field is-horizontal">
                <div class="field-label is-normal">
                    <label class="label">Animal Type</label>
                </div>
                <div class="field-body">
                    <div class="field is-narrow">
                        <div class="control">
                            <div class="select is-fullwidth">
                                <select>
                                    <option>Dog</option>
                                    <option>Cat</option>
                                    <option>Small Mammal</option>
                                    <option>Reptile</option>
                                    <option>Bird</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>



            <div class="field is-left">
                <label class="label">What are you looking for in a temporary pet?</label>
            </div>
            <div class="field is-horizontal">

                <div class="field-body">
                    <div class="field">
                        <div class="control">
                            <textarea class="textarea" placeholder="Explain how we can help you"></textarea>
                        </div>
                    </div>
                </div>
            </div>

            <div class="field">
                <div class="control">
                    <label class="checkbox">
                        <input type="checkbox"> I agree to the
                        <a href="#">terms and conditions</a>
                    </label>
                </div>
            </div>

            <div class="field is-horizontal">
                <div class="field-label">
                    <!-- Left empty for spacing -->
                </div>


        </section>
        <footer class="modal-card-foot">
            <button class="button is-success" href="signup">Submit</button>
            <button class="button" id="close-button">Cancel</button>
        </footer>
        </div>
    </div>

    <script type="text/javascript" src="../../assets/scripts/pages/profilePage.js"></script>